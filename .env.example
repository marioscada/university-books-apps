# Environment Variables Template
# Copy this file to .env.local and fill in the values
# .env.local is gitignored and should never be committed

# =============================================================================
# API Configuration
# =============================================================================

# Base URL for AWS API Gateway
VITE_API_BASE_URL=https://omrsvjwsfh.execute-api.eu-south-1.amazonaws.com/dev

# =============================================================================
# Developer API Key (Build-Time Only)
# =============================================================================
# ⚠️ WARNING: This API Key should ONLY be used in build scripts
# NEVER use this key in the Angular application runtime code
# It's only for downloading OpenAPI schema during development/build
VITE_DEV_API_KEY=your-api-key-here

# =============================================================================
# AWS Cognito Configuration (User Authentication)
# =============================================================================
# These are used for end-user authentication in the app
VITE_COGNITO_REGION=eu-south-1
VITE_COGNITO_USER_POOL_ID=your-user-pool-id
VITE_COGNITO_CLIENT_ID=your-client-id

# =============================================================================
# Feature Flags
# =============================================================================
VITE_ENABLE_DEBUG_LOGGING=true
VITE_ENABLE_SCHEMA_CACHE=true

# =============================================================================
# Schema Management
# =============================================================================
# How long to cache schema before checking for updates (in milliseconds)
VITE_SCHEMA_CACHE_TTL=3600000
