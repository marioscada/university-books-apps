{
  // ============================================
  // File Management
  // ============================================
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/cdk.out": true,
    "**/dist": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/cdk.out": true,
    "**/dist": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/cdk.out/**": true,
    "**/dist/**": true
  },

  // ============================================
  // AI Assistant Features (VS Code 1.107.0+)
  // ============================================

  // MCP (Model Context Protocol) - Enhanced GitHub Integration
  "github.copilot.chat.githubMcpServer.enabled": true,

  // Chat Sessions - Keep conversations active
  "chat.viewSessions.enabled": true,

  // Claude Skills (Experimental) - Reuse capabilities
  "chat.useClaudeSkills": true,

  // Custom Agents - Organization-wide agents
  "github.copilot.chat.customAgents.showOrganizationAndEnterpriseAgents": true,
  "chat.customAgentInSubagent.enabled": true,

  // Terminal Integration - Rich output in chat
  "chat.terminal.showCommandStatus": true,

  // Context Management - Better multi-file context
  "chat.experimental.contextAttachments": true
}
